<h1>All Patient Comments</h1>

    <div class="flex_group clinician_text flex_around">
        <div class="width90 flex_around_margin_right">

            <div class="flex_group margin_5 top_margin">
                <h2>Most recent comments first</h2>
                <div class="flex_group">
                    <p><a href="/clinician/view_all_comments/left" class="flex_around_margin_right">{{arrows.arrows.left}}</a></p>
                    <p>{{arrows.curr_page}} of {{arrows.total_pages}}</p>
                    <p><a href="/clinician/view_all_comments/right" class="flex_around_margin_left">{{arrows.arrows.right}}</a></p>
                </div>
            </div>

            <table class="data_viewing_table">
                <thead>
                    <tr class="tableHeader table_corner_top_left table_corner_top_right">
                        <th class="table_corner_top_left">

                            <div class="row_header">Patient</div>
                        </th>
                        <th>
                            <div class="comments_width">Comment</div>
                        </th>
                        <th>
                            <div class="row_header">Date</div>
                        </th>
                        <th>
                            <div class="row_header">Data type</div>
                        </th>
                        <th class="table_corner_top_right">Measurement</div>
                        </th>
                    </tr>
                </thead>

                <div class="table_white">
                    {{#each entries}}
                    <tr>
                        <td><a href= {{{this.patient_id}}}> {{this.name}}</a></td>
                        <td class="comments_width">{{this.comment}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.data_type}}</td>
                        <td>{{this.measurement}}</td>
                    </tr>
                    {{/each}}
                </div>
                
            </table>
            <div class="flex_group center_text top_bottom_margin">
                    <p><a href="/clinician/view_all_comments/left" class="flex_around_margin_right">{{arrows.arrows.left}}</a></p>
                    <p>{{arrows.curr_page}} of {{arrows.total_pages}}</p>
                    <p><a href="/clinician/view_all_comments/right" class="flex_around_margin_left">{{arrows.arrows.right}}</a></p>
            </div>

        </div>
        </div>

        <div>
            {{> partial_back_button address="."}}
        </div>
